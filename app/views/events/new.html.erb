<h2><%= @calendar.calendar_name %> - New Event</h2>

<div class="well">
  <% if @event.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>


  <%= form_for @event, url: { action: 'create' }, html: { class: 'form-horizontal' } do |f| %>
      <%= f.hidden_field :calendar_id %>

      <fieldset>
        <div class="form-group">
          <label class="control-label col-lg-2">Summary</label>
          <div class="col-lg-10">
            <%= f.text_field :summary, { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-lg-2">Description</label>
          <div class="col-lg-10">
            <%= f.text_area :description, { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-lg-2">Start Time</label>
          <div class="col-lg-10">
            <%= f.datetime_local_field :start_time, { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-lg-2">End Time</label>
          <div class="col-lg-10">
            <%= f.datetime_local_field :end_time, { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10">
            <%= f.submit "Create", { class: 'btn btn-success btn-primary' } %>
          </div>
        </div>
      </fieldset>
  <% end %>
</div>
