<div class="row">
  <div class="col-xs-6">
    <h2>Enterprise Connect</h2>
  </div>

  <div class="col-xs-6 text-right">
    <%= link_to "Authorize User", new_enterprise_connect_path, { class: 'btn btn-primary btn-succes' } %>
  </div>
</div>

<h3>Resources</h3>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @resources.each do |resource| %>
      <tr>
        <td>
          <%= resource.name %>
        </td>
        <td>
          <%= resource.email %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<h3>Users</h3>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user_status(user) %>
        </td>
        <td>
          <%= link_to "View", service_account_user_path(id: user.id) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
