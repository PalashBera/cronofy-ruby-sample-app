<h2>Calendars</h2>

<% @account_profiles.each do |account_profile, calendars| %>
    <h3><%= account_profile[:profile_name] %></h3>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% calendars.each do |calendar| %>
          <tr>
            <td>
              <%= calendar.calendar_name %>
            </td>
            <td>
              <%= link_to "View", calendar_path(calendar.calendar_id) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>