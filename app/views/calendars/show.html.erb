<div class="row">
  <div class="col-xs-8">
    <h2><%= @calendar.calendar_name %> - Events</h2>
  </div>

  <div class="col-xs-4 text-right">
    <%= link_to "Create Event", new_profile_calendar_event_path(params[:profile_id], @calendar.calendar_id), { class: "btn btn-primary" } %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Event Summary</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.summary %>
        </td>
        <td>
          <%= event.start.time %>
        </td>
        <td>
          <%= event.end.time %>
        </td>
        <td>
          <%= link_to "View", profile_calendar_event_path(params[:profile_id], @calendar.calendar_id, event.event_uid) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
